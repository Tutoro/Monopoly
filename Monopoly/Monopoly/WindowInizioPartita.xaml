<Window x:Class="Monopoly.WindowInizioPartita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="WindowInizioPartita" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="TextBox_NumeroGiocatori" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" LostKeyboardFocus="AggiornaGiocatori"/>
        <Label Content="Numero Giocatori:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="23"/>
        <Button x:Name="Button_Conferma" Content="Inizia" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="75" Click="InizioPartita"/>

    </Grid>
</Window>
